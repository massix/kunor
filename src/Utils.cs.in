using System.Diagnostics;
using System;
using Gtk;

/* This class will be generated by the autotools */
namespace Kunor {
	public class Utils {
		public const string PACKAGE = "@PACKAGE_NAME@";
		public const string PREFIX = "@prefix@";
		public const string DATADIR = "@prefix@/share";
		public const string ICONDIR = "@prefix@/share/icons/hicolor/scalable/apps";
		public const string ICONNAME = "kunor.svg";
		public const string VERSION = "@PACKAGE_VERSION@";

		public const string TAG_DEBUG = "DEBUG";
		public const string TAG_WARNING = "WARNING";
		public const string TAG_ERROR = "ERROR";

		/* Conditional debug printing */
		[Conditional ("DEBUG_ON")]
		public static void PrintDebug (string tag, string message) {
			System.Console.WriteLine ("[{0}] {1}", tag, message);
		}
	}
}
